<% provide :title, t(".list") %>
<%= render 'layouts/slides' %>
<div class="container text-center">    
  <h3><%= t ".list" %></h3><hr>
  <div class="row">
    <% @books.each do |book| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag book.image %>
        <h5><strong><%= book.name %></strong></h5>
        <h5><%= link_to book.author.name %></h5>
        <%= link_to t(".detail"), book %>
      </div>
    </div>
    <% end %>
  </div><hr>
  <ul class="pager">
    <li><%= link_to t ".previous" %></li>
    <li><%= link_to t ".next" %></li>
  </ul> 
</div>
